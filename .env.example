# Marimo AI Agent Configuration
# Copy this to .env and fill in your API keys

# Google Gemini Configuration (PRIMARY - RECOMMENDED)
GOOGLE_AI_API_KEY=your-google-ai-key-here
# Get your FREE API key from: https://makersuite.google.com/app/apikey
# or https://aistudio.google.com/app/apikey

# OpenAI Configuration (Optional)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Groq Configuration (Optional - Fast inference)
GROQ_API_KEY=gsk_your-groq-key-here

# AWS Bedrock Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Marimo Agent Settings
MARIMO_AGENT_DEFAULT_MODEL=google/gemini-2.5-flash
# Alternative models:
# - google/gemini-2.5-pro (advanced with Deep Think)
# - google/gemini-2.5-flash-image (multimodal image generation)
# - google/gemini-2.0-flash-exp (experimental)
# - google/gemini-1.5-flash (stable, fast)
# - google/gemini-1.5-flash-8b (lite, fastest)
# - google/gemini-1.5-pro (advanced capabilities)
MARIMO_AGENT_AUTO_EXECUTE=false
MARIMO_AGENT_REQUIRE_APPROVAL=true
MARIMO_AGENT_MAX_STEPS=10
MARIMO_AGENT_STREAM_RESPONSES=true
MARIMO_AGENT_SAFETY_MODE=balanced

# Gemini 2.5 Specific Settings
GEMINI_DEEP_THINK=false  # Enable Deep Think mode for Gemini 2.5 Pro
GEMINI_THINKING_BUDGET=0  # Token budget for thinking (0 = automatic)

# Optional: Custom OpenAI-compatible endpoints
# CUSTOM_LLM_API_KEY=your-custom-key
# CUSTOM_LLM_BASE_URL=https://your-custom-endpoint.com/v1
# CUSTOM_LLM_MODEL=your-model-name

# Logging level for agent operations
MARIMO_AGENT_LOG_LEVEL=INFO